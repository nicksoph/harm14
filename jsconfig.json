{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve"
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
